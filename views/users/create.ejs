                                        <i class="bi bi-calendar-event"></i>
                                    </span>
                                </div>
                            </div>
                            <!-- Gender -->
                            <div class="col-4">
                                <div class="form-floating mb-3">
                                    <select id="gender" name="gender" class="form-select rounded-0" aria-label="gender">
                                        <option selected>M</option>
                                        <option>F</option>
                                        <option>Other</option>
                                    </select>
                                    <label for="gender">Gender</label>
                                </div>
                            </div>
                        </div>
                        <div class="form-floating mb-3">
                            <select id="nationality" name="nationality" class="form-select rounded-0"
                                aria-label="Nationality">
                                <option selected>Select an option</option>
                                <%for (let country of countries) { %>
                                    <option>
                                        <%=country.demonym%>
                                    </option>
                                    <% } %>
                            </select>
                            <label for="nationality">Nationality</label>
                        </div>
