<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

    <!-- Roboto Font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100..900;1,100..900&display=swap"
        rel="stylesheet">

    <!-- Font Awesome  -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

    <title>Registered Users</title>

    <style>
        body {
            background-color: aliceblue;
        }

        img {
            height: 150px;
            width: auto;
            object-fit: contain;
        }

        .card {
            width: 18rem;
        }

        .modal-img {
            height: 100px;
            width: auto;
            object-fit: contain;
        }
    </style>
</head>

<body class="p-5">
    <main class="container">
        <div>
            <h1 class="text-center mb-3">Registered Users</h1>
            <nav class="navbar mb-3">
                <div class="container-fluid d-flex justify-content-center">
                    <form class="d-flex" role="search">
                        <input class="form-control me-2" type="search" placeholder="Search for a user"
                            aria-label="Search User" style="width: 300px">
                        <button class="btn btn-outline-success" type="submit">Search</button>
                    </form>
                </div>
            </nav>
        </div>
        <div class="row row-cols-1 row-cols-md-4 g-4 gap-0">
            <% for (let i=0; i < users.length; i++) { %>
                <div class="col">
                    <div class="card h-100 position-relative">
                        <img src="/images/user-1.png" class="card-img-top" alt="Mobile user">
                        <div class="card-body d-flex justify-content-center">
                            <button class="btn btn-link" data-id="<%= users[i]._id %>" data-bs-toggle="modal"
                                data-bs-target="#exampleModal">
                                <h5 class="card-title">
                                    <%= users[i].name %>
                                        <%= users[i].surname %>
                                </h5>
                            </button>
                        </div>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">Children: <%= users[i].enrolling %>
                            </li>
                            <li class="list-group-item">Email: <%= users[i].email %>
                            </li>
                            <li class="list-group-item">Address: <%= users[i].address %>
                            </li>
                        </ul>
                        <div class="card-footer">
                            <% joinDate=new Date(users[i].createdAt) %>
                                <small class="text-body-secondary">Joined on: <%= joinDate.toLocaleString('en-GB', {
                                        day: 'numeric' , month: 'long' , year: 'numeric' , }) %></small>
                        </div>
                        <div class="position-absolute top-0 end-0 m-2">
                            <button class="btn btn-danger btn-sm delete-btn delete-btn" data-id="<%= users[i]._id %>">
                                <i class="fa-solid fa-trash"></i>
                            </button>
                        </div>
                    </div>
                </div>
                <% } %>
        </div>


        <!-- MODAL -->

        <!-- Modal -->

        <div class="modal-container">

        </div>

    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>

    <script type="application/json" id="user-data">
        <%- JSON.stringify(users) %>
    </script>

    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

    <script src="/scripts/show.js" type="module"></script>
</body>

</html>